{
  "name": "revit-mcp",
  "version": "2.0.0",
  "description": "Enhanced Revit MCP server with elevator automation, floor duplication, and intelligent element search. Secure implementation with authentication and rate limiting.",
  "main": "index.js",
  "type": "module",
  "bin": {
    "revit-mcp": "./build/index.js"
  },
  "scripts": {
    "clean": "rimraf build",
    "prebuild": "npm run clean",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "files": [
    "build/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/espocorp/revit-mcp.git"
  },
  "keywords": [
    "revit",
    "mcp",
    "automation",
    "elevator",
    "bim",
    "aec"
  ],
  "author": "ESPO Corporation",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/espocorp/revit-mcp/issues"
  },
  "homepage": "https://github.com/espocorp/revit-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "ws": "^8.18.1",
    "zod": "^3.24.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/ws": "^8.18.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.1.2",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
