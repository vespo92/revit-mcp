# Revit MCP Server Configuration

# API Security
REVIT_MCP_API_KEY=your-secure-api-key-here-min-32-chars

# Redis Configuration
REDIS_PASSWORD=revit-mcp-redis-pass
REDIS_URL=redis://:revit-mcp-redis-pass@localhost:6379/0

# ChromaDB Configuration
CHROMA_AUTH_TOKEN=your-chroma-auth-token
CHROMA_URL=http://localhost:8000

# PyRevit Bridge
PYREVIT_BRIDGE_URL=http://localhost:5000
PYREVIT_BRIDGE_API_KEY=your-pyrevit-bridge-api-key

# Ollama Configuration (optional)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODELS=codellama:7b,nomic-embed-text

# Monitoring (optional)
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure-password

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Allowed Clients (comma-separated)
ALLOWED_CLIENTS=claude,cline,vscode

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/revit-mcp/server.log